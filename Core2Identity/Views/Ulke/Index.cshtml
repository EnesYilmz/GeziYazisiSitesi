@model IEnumerable<GeziYazisiSitesi.Modals.Ulke>

@{
    ViewData["Title"] = "Index";
}

<section id="page-title">
    <div class="container clearfix">
        <h1>Ülkeler Kontrol Paneli</h1>
    </div>   
</section>

<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Ad)
                </th>
                <th>
                        <a asp-action="Create"><button class="btn btn-success">Yeni Ülke Ekle</button></a>
                </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ad)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UlkeId">Düzenle</a> |
                <a asp-action="Details" asp-route-id="@item.UlkeId">Detay</a> |
                <a asp-action="Delete" asp-route-id="@item.UlkeId">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
