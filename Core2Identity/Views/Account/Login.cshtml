@model LoginModel
@{
    ViewData["Title"] = "Login";
}
<section id="page-title">
    <div class="container clearfix">
        <h1>Login</h1>
    </div>
</section>

<section id="content">

    <div class="content-wrap">

        <div class="container clearfix">

            <div class="tabs divcenter nobottommargin clearfix" id="tab-login-register" style="max-width: 500px;">

                <div class="tab-container">

                    <div class="tab-content clearfix" id="tab-login">
                        <div class="card nobottommargin">
                            <div class="card-body" style="padding: 40px;">
                                <form id="login-form" name="login-form" class="nobottommargin" asp-action="Login" method="post">
                                    <div class="text-danger" asp-validation-summary="All"></div>

                                    <h3>Login to your Account</h3>

                                    <div class="col_full">
                                        <label asp-for="Email">Email:</label>
                                        <input asp-for="Email" class="form-control" />
                                    </div>

                                    <div class="col_full">
                                        <label asp-for="Password">Password:</label>
                                        <input asp-for="Password" class="form-control" />
                                    </div>

                                    <div class="col_full nobottommargin">

                                        <button class="button button-3d button-black nomargin" value="Submit" type="submit">Giriş Yap</button>

                                    </div>
                                    <hr />
                                    <div>
                                        <a href="~/Admin/Create" class="button button-3d button-black nomargin">Kayıt Ol</a>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>

