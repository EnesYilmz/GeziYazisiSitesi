@model Tuple<IOrderedQueryable<GeziYazisiSitesi.Modals.Yazi>, List<GeziYazisiSitesi.Modals.Sehir>>

@{
    ViewData["Title"] = "Yazilar";
}
<section id="page-title">
    <div class="container clearfix">
        <h1>En Son Yazılar</h1>
    </div>
</section>

<section id="content">
    <div class="content-wrap">
        <div class="container clearfix">
            <div id="posts" class="post-grid grid-container grid-3 clearfix" data-layout="fitRows">
                @foreach (var item in Model.Item1)
                {

                    <div class="entry clearfix">
                        <div class="entry-image">
                            <a asp-action="Oku" asp-route-id="@item.YaziId" data-lightbox="image"><img class="image_fade" src="@Html.DisplayFor(modelItem => item.Resim)" alt="@Html.DisplayFor(modelItem => item.Baslik)"></a>
                        </div>
                        <div class="entry-title">
                            <h2><a href="blog-single.html">@Html.DisplayFor(modelItem => item.Baslik)</a></h2>
                        </div>
                        <ul class="entry-meta clearfix">
                            <li><i class="icon-calendar3"></i> @Html.DisplayFor(modelItem => item.Tarih)</li>
                            <li><a href="blog-single.html#comments"><i class="icon-comments"></i> @Html.DisplayFor(modelItem => item.YorumSayisi)</a></li>
                            <li><a href="blog-single.html#comments"><i class="fa fa-thumbs-o-up"></i> @Html.DisplayFor(modelItem => item.BegenmeSayisi)</a></li>
                            <li><a href="blog-single.html#comments"><i class="fa fa-eye"></i> @Html.DisplayFor(modelItem => item.Goruntulenme)</a></li>
                            <li><a href="#"><i class="fa fa-plane"></i> @Model.Item2.FirstOrDefault(i => i.SehirId == item.SehirId).Ad  </a></li>
                        </ul>
                        <div class="entry-content">
                            <p>@Html.DisplayFor(modelItem => item.Icerik)</p>
                            <a asp-action="Oku" asp-route-id="@item.YaziId" class="more-link">Devamını Oku</a>
                        </div>
                    </div>

                }
            </div>
            <!-- Pagination
            ============================================= -->
            <div class="row mb-3">
                <div class="col-12">
                    <a href="#" class="btn btn-outline-secondary float-left">&larr; Older</a>
                    <a href="#" class="btn btn-outline-dark float-right">Newer &rarr;</a>
                </div>
            </div>
            <!-- .pager end -->

        </div>
    </div>
</section>