@model Core2Identity.Models.Uye
@{
    ViewData["Title"] = "UyeEkle";
}

<style>
    .Arka {
        background: url(bayrak.jpg) no-repeat center center fixed;
        background-size: cover;
    }
</style>



    <div class="container clearfix center">

        </div>

    <section id="content">



        <div class="section nopadding nomargin" style="width: 100%; height: 100%; position: absolute; left: 0; top: 0">
            <img src="~/images/10.jpg" class="Arka">

        </div>
        <div class="content-wrap nopadding">

            <div class="section nobg full-screen nopadding nomargin">
                <div class="container-fluid vertical-middle divcenter clearfix">

                    @*<div class="center">
                        <a href="index.html"><img src="~/images/logo-dark.png" alt="Canvas Logo"></a>
                    </div>*@

                    <div class="card divcenter noradius noborder" style="max-width: 400px;">
                        <div class="card-body" style="padding: 40px;">
                            <form class="nobottommargin" asp-action="Login" method="post">


                                <div class="text-danger" asp-validation-summary="All"></div>
                                @ViewBag.Uyarı


                                <div class="center">
                                    <i class="fa fa-sign-in fa-3x">
                                        <h3>Giriş Yap</h3>
                                    </i>
                                </div>

                                <div class="col_full">
                                    <label asp-for="Email">Email:</label>
                                    <input asp-for="Email" class="form-control not-dark" />
                                </div>

                                <div class="col_full">
                                    <label asp-for="Sifre">Password:</label>
                                    <input asp-for="Sifre" class="form-control not-dark" />
                                    <div class="text-danger">@ViewBag.Uyarı</div>
                                </div>

                                <div class="col_full nobottommargin">
                                    <b asp-action="Index">
                                        <button class="button button-3d button-black nomargin" type="submit" value="Kayıt Ol">Login</button>
                                    </b>
                                </div>

                                <hr />
                                <a asp-action="UyeEkle" asp-controller="Uye">Kayıtlı değil iseniz kayıt olabilirsiniz.</a>



                            </form>

                         
                            @*<div class="center">
                                <h4 style="margin-bottom: 15px;">or Login with:</h4>
                                <a href="#" class="button button-rounded si-facebook si-colored">Facebook</a>
                                <span class="d-none d-md-block">or</span>
                                <a href="#" class="button button-rounded si-twitter si-colored">Twitter</a>
                            </div>*@
                        </div>
                    </div>


                    </div>
                </div>
            </div>



    </section><!-- #content end -->
